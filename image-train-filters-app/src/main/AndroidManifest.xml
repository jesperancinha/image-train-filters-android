<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
          package="org.jesperancinha.itf.android">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat"
            android:roundIcon="@mipmap/ic_launcher_round"
            tools:replace="android:icon,android:theme,android:roundIcon"
            tools:ignore="GoogleAppIndexingWarning">

        <activity
                android:name="org.jesperancinha.itf.android.MainActivity"
                android:label="@string/app_name"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="org.jesperancinha.itf.android.FileManagerActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme">
        </activity>
    </application>
</manifest>
