<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.jesperancinha.itf.android.FileManagerActivity">

    <ImageView
        android:layout_width="@dimen/directory_item_dim"
        android:layout_height="@dimen/directory_item_dim"
        android:id="@+id/typeFolderFile"
        android:layout_marginLeft="5dip"
        android:minWidth="50dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fileName"
        android:layout_toRightOf="@id/typeFolderFile"
        android:layout_marginLeft="5dip"
        android:minWidth="100dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fileDate"
        android:layout_toRightOf="@id/fileName"
        android:layout_marginLeft="5dip"
        android:minWidth="170dp"
        android:layout_centerVertical="true"
        />
</RelativeLayout>