<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.steelzack.pencelizer.FileManagerActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeFolderFile"
        android:layout_marginLeft="5dip"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fileName"
        android:layout_toRightOf="@id/typeFolderFile"
        android:layout_marginLeft="5dip"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fileDate"
        android:layout_toRightOf="@id/fileName"
        android:layout_marginLeft="5dip"
        />

    <Button
        android:layout_width="wrap_content"
        android:maxHeight="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAcceptFolder"
        android:layout_toRightOf="@id/fileDate"
        android:layout_marginLeft="5dp"
        android:width="50dp"
        android:minWidth="50dp"
        android:maxWidth="50dp"
        />
</RelativeLayout>