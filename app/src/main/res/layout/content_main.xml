<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.steelzack.pencelizer.MainActivity">

    tabl

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Selected File"
        android:id="@+id/lblSelectedFile"
        android:gravity="center_vertical"
        android:height="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="none"
        android:id="@+id/lblESelectedFile"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:layout_toRightOf="@id/lblSelectedFile"
        android:gravity="center_vertical"
        android:height="50dp"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File"
        android:id="@+id/btnFindFile"
        android:layout_gravity="right"
        android:onClick="pFindFile"
        android:singleLine="false"
        android:layout_toRightOf="@id/lblESelectedFile"
        android:layout_alignParentRight="true"
        android:height="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/lblSelectedFile"
        android:text="Select coding language"
        android:gravity="center_vertical"
        android:id="@+id/lblLanguageCoding"
        android:height="50dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spiLanguageCode"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/lblLanguageCoding"
        android:layout_below="@id/lblSelectedFile"
        android:minHeight="50dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/lblLanguageCoding"
        android:gravity="center_vertical"
        android:id="@+id/lblDistribution"
        android:height="50dp"
        android:text="Select distribution"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spiDistribution"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/lblDistribution"
        android:layout_below="@id/lblLanguageCoding"
        android:minHeight="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/lblDistribution"
        android:gravity="center_vertical"
        android:id="@+id/lblBackgroundColor"
        android:height="50dp"
        android:text="Select back color:"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@id/lblDistribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Color"
        android:id="@+id/btnBackgroundColor"
        android:layout_gravity="right"
        android:onClick="pGetBackGroundColor"
        android:singleLine="false"
        android:layout_toRightOf="@id/lblBackgroundColor"
        android:layout_alignParentRight="true"
        android:height="50dp"
        />

</RelativeLayout>